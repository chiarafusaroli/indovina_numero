<Window x:Class="ProgettoWpf.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:ProgettoWpf"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid>
        <Label Content="Indovina il numero" HorizontalAlignment="Center" Height="50" Margin="0,35,0,0" VerticalAlignment="Top" Width="300" FontSize="22" FontWeight="Bold" HorizontalContentAlignment="Center" />
        <Label Content="Regole del gioco: indovina in 10 tentativi un numero tra 1 e 999" HorizontalAlignment="Center" Height="50" Margin="0,70,0,0" VerticalAlignment="Top" Width="800" FontSize="18"  HorizontalContentAlignment="Center" />
        <Label x:Name="lblMessage" Content="" HorizontalAlignment="Center" Height="50" Margin="0,105,0,0" VerticalAlignment="Top" Width="800" FontSize="18"  HorizontalContentAlignment="Center" Foreground="Red" />
        <TextBox x:Name="txtAttempts" HorizontalAlignment="Center" Height="53" Margin="0,154,0,0" TextWrapping="Wrap" Text="inserisci un valore"  VerticalAlignment="Top" TextAlignment="Center" VerticalContentAlignment="Center" Width="495" GotFocus="DeleteContent"/>
        <Button  x:Name="btnTry" Content="Try" HorizontalAlignment="Center" Margin="0,240,0,0" VerticalAlignment="Top" Width="500" Height="50" Background="Orchid" FontWeight="Bold" FontSize="22" Click="Play"/>
        <ListBox x:Name="lstBoxAttempts" HorizontalAlignment="Left" Height="252" Margin="10,155,0,0" VerticalAlignment="Top" Width="125" />

    </Grid>
</Window>
